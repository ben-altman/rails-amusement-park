<h1>Sign In</h1><br/>

<%= form_tag("/signin", method: "post") do %>
    <%= label_tag "Your name: " %>
    <%= collection_select(:user, :name, User.all, :name, :name, :prompt => "Please select your username from this dropdown") %>
    <br/><br/>
    <%= label_tag "Your password: " %>
    <%= password_field_tag :password %><br/><br/>
    <%= submit_tag "Sign In" %>
<% end %>