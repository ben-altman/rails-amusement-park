
<strong>Name: </strong><p><%= @attraction.name %></p>
<strong>Total Number of Users: </strong><p><%= @attraction.rides.count %></p>
<strong>Ticket Requirement: </strong><p><%= @attraction.tickets %></p>
<strong>Height Requirement: </strong><p><%= @attraction.min_height %> inches</p>
<strong>Nausea Rating: </strong><p><%= @attraction.nausea_rating %></p>
<strong>Happiness Rating : </strong><p><%= @attraction.happiness_rating %></p>

<br/>

<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
    <%= form_tag("/rides", method: "post") do %>
        <%= hidden_field_tag :attraction_id, @attraction.id %>
        <%= button_tag "Go on this ride" %>
    <% end %>
<% end %>